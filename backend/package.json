{
	"name": "tasko-backend",
	"version": "1.0.0",
	"description": "Backend API for Tasko task management application",
	"main": "src/server.js",
	"scripts": {
		"start": "node src/server.js",
		"dev": "nodemon src/server.js",
		"test": "jest --verbose",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [
		"express",
		"postgresql",
		"rest-api",
		"nodejs"
	],
	"author": "Your Name",
	"license": "MIT",
	"dependencies": {
		"express": "^4.18.2",
		"pg": "^8.11.3",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0",
		"dotenv": "^16.3.1"
	},
	"devDependencies": {
		"jest": "^29.7.0",
		"supertest": "^6.3.3",
		"nodemon": "^3.0.2"
	},
	"jest": {
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"testMatch": [
			"**/tests/**/*.test.js"
		]
	}
}
